@model CuisineVM
<a class="row" asp-controller=@nameof(CuisineController).GetASPName() asp-action=@nameof(CuisineController.names.Index)>Powrót do rodzajów dań</a>

<h1>Edycja rodzaju dania</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action=@nameof(CuisineController.names.Edit)>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Id" class="form-control" type="hidden" />
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action=@nameof(CuisineController.names.Index)>Powrót</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
