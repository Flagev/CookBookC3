@model IngredientViewModel
<div>
    <h1 style="display: inline-block">Produkty</h1>
    <a style="vertical-align: text-bottom" asp-action=@ASPNames.Create>Dodaj</a>
</div>
<!--Kategorie-->
<div>
    <h3 style="display: inline-block">Kategorie</h3>
    <a style="vertical-align: text-bottom" asp-controller=@nameof(CookBookASP.Controllers.CategoryController).GetASPName() asp-action=@ASPNames.Index>Edytuj</a>
</div>
<!--Wybór kategorii do wyswietlania-->
<ul class="nav nav-pills">
    <li class="nav-item">
        <a class="nav-link
               @(Model.SelectedCategoryName is null ?"active": "")"
           asp-action=@ASPNames.Ingredients asp-controller=@nameof(CookBookASP.Controllers.RecipeController).GetASPName() asp-route-pageId="1"
           asp-route-category="" asp-route-id=@ViewBag.recipeId>
            Wszystkie
        </a>
    </li>
    @foreach (var category in Model.Categories)
    {
        <li class="nav-item">
            <a class="nav-link
                   @(Model.SelectedCategoryName == category.Name?"active": "")"
               asp-action=@ASPNames.Ingredients asp-controller=@nameof(CookBookASP.Controllers.RecipeController).GetASPName()
               asp-route-category="@category.Name" asp-route-pageId="1" asp-route-id=@ViewBag.recipeId>
                @category.Name
            </a>
        </li>
    }
</ul>
<!--Produkty-->
<h3 style="display: inline-block">Produkty w kategorii</h3>
@foreach (var ingredient in Model.Ingredients)
{
    <div class="card m-2">
        <div class="card-body">
            <h5 class="card-title">
                @ingredient.Name
                @if (@ingredient.Categories != null)
                {
                    foreach (string category in Regex.Split(ingredient.Categories, ","))
                    {
                        <span class="badge badge-info">@category</span>
                    }
                }
            </h5>
            <h7 class="card-subtitle">@ingredient.Description.</h7>
            <p class="card-text">Jednostka: @ingredient.Unit</p>
            <p class="card-text">Kalorie: @ingredient.Callories</p>
            <p class="card-text">Koszt: @ingredient.Cost.ToString("c")</p>
            <div class="row">
                <form asp-controller=@nameof(CookBookASP.Controllers.RecipeController).GetASPName() asp-action=@ASPNames.AddIngredient method="post" class="m-1">
                    <input name="ingredientId" type="hidden" value="@ingredient.Id">
                    <input name="id" type="hidden" value="@ViewBag.recipeId">
                    <button type="submit" class="btn btn-secondary">
                        Dodaj do przepisu
                    </button>
                </form>
            </div>
        </div>

    </div>
}
<!--Nawigacja miedzy stronami-->
<div class="row justify-content-center p-1">
    <ul class="pagination" pagination-info="@Model.PaginationInfo" page-action=@ASPNames.Ingredients 
        page-outer-class-default="page-item" page-outer-class-selected="page-item active" page-inner-class-default="page-link"></ul>
</div>
