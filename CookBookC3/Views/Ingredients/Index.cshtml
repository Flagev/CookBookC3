@model IngredientsList
    <div class="row p-1">

            <a class="btn btn-outline-primary m-1
               @(ViewBag.SelectedCategory==""?"active": "")"
               asp-action="Index" asp-controller="Ingredients" asp-route-id="1"
               asp-route-category="">
                Wszystkie
            </a>

        @foreach (string category in Model.Categories)
        {
                <a class="btn btn-outline-primary m-1
                   @(ViewBag.SelectedCategory==category?"active": "")"
                   asp-action="Index" asp-controller="Ingredients"
                   asp-route-category="@category" asp-route-id="1">
                    @category
                </a>
        }
    </div>


    @foreach (var ingredient in Model.Ingredients)
    {
        <div class="card m-2">
            <div class="card-header">
                <h4 class="card-title">@ingredient.Name</h4>
            </div>
            <div class="card-body">
                <p class="card-subtitle">@ingredient.Description.</p>
                <p class=" card-text">Jednostka: @ingredient.Unit</p>
                <p class=" card-text">Kalorie: @ingredient.Callories</p>
                <p class=" card-text">Koszt: @ingredient.CostPerUnit</p>
            </div>
            <p class=" card-footer">Kategoria: @ingredient.Category</p>
        </div>
    }


    <div class="row justify-content-center p-1">
        <ul class="pagination" pagination-info="@Model.PaginationInfo" page-action="Index"
            page-outer-class-default="page-item" page-outer-class-selected="page-item active" page-inner-class-default="page-link"></ul>
    </div>
    <div class="row justify-content-center p-1">
        <a asp-action="Create" class="btn btn-primary ">Dodaj nowy</a>
    </div>
